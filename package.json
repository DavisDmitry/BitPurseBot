{
  "name": "bit-purse-bot",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "eslint --fix src && prettier --plugin-search-dir . --write src",
    "build-zig": "zig build-lib zig/wallet.zig -target wasm32-freestanding -O ReleaseSmall -dynamic -rdynamic --import-memory",
    "expose": " lt -p 5173"
  },
  "devDependencies": {
    "@interlay/esplora-btc-api": "^1.3.0",
    "@material/material-color-utilities": "^0.2.7",
    "@nuintun/qrcode": "^3.4.0",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.20.4",
    "@sveltestack/svelte-query": "^1.6.0",
    "@tma.js/init-data-node": "^0.0.16",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "bech32": "^2.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-svelte": "^2.30.0",
    "grammy": "^1.19.1",
    "localtunnel": "^2.0.2",
    "pocketbase": "^0.18.2",
    "postcss": "^8.4.31",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.3",
    "telegram-webapps": "^6.9.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "web-bip39": "^0.0.3"
  },
  "type": "module"
}
